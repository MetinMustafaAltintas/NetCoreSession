@model List<Employee>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Ismi</th>
            <th>Acıklaması</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee item in Model)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td><a class="btn btn-warning" asp-action="UpdateEmployee" asp-controller="Employee" asp-route-id="@item.EmployeeId">Güncelle</a></td>
                <td><a class="btn btn-danger" asp-action="DeleteEmployee" asp-controller="Employee" asp-route-id="@item.EmployeeId">Sil</a></td>
            </tr>
        }
    </tbody>
</table>